<h1>Reclamações</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Número do Pedido</th>
      <th>Grau de confiança</th>
      <th>Email</th>
      <th>Celular</th>
      <th>Descrição do ocorrido</th>
      <th>CEP do pedido</th>
      <th>IP da requisição</th>
    </tr>
  </thead>
  <tbody>
    <% @complaints.each do |complaint| %>
      <tr>
        <td><%= complaint.name %></td>
        <td><%= complaint.order_number %></td>
        <td><%= translate_safety complaint.trust_rating %></td>
        <td><%= complaint.email %></td>
        <td><%= complaint.phone_number %></td>
        <td><%= complaint.description %></td>
        <td><%= complaint.delivery_cep %></td>
        <td><%= complaint.request_ip %></td>
      </tr>
    <% end %>
  </tbody>
</table>
